<details {%- if params.id %} id="{{params.id}}"{% endif %} class="nhsuk-details {%- if params.classes %} {{ params.classes }}{% endif %}" {%- if params.attributes %}{%- for attribute, value in params.attributes.items() %} {{attribute}}="{{value}}"{% endfor %}{% endif %} {{- " open" if params.open }}>
  <summary class="nhsuk-details__summary">
    <span class="nhsuk-details__summary-text">
      {{ params.summaryHtml | safe if params.summaryHtml else params.summaryText }}
    </span>
  </summary>
  <div class="nhsuk-details__text">
    {{ params.html | safe if params.html else params.text }}
  </div>
</details>
