{% from "nhsuk-jinja-components/tag/macro.jinja" import nhsukTag -%}

<div class="nhsuk-phase-banner
  {%- if params.classes %} {{ params.classes }}{% endif %}"{% if params.attributes %}{% for attribute, value in params.attributes.items() %} {{ attribute }}="{{ value }}"{% endfor %}{% endif %}>
  <p class="nhsuk-phase-banner__content">
    {{- nhsukTag(
    {
      "text": params.tag.text,
      "html": params.tag.html,
      "classes": "nhsuk-phase-banner__content__tag " + (params.tag.classes if params.tag.classes else "")
    }
    ) -}}
    <span class="nhsuk-phase-banner__text">
      {{ params.html | safe if params.html else params.text }}
    </span>
  </p>
</div>
